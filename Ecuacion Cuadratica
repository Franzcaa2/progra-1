#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;
int main ()
{ 
	float a,b,c,D,x,x1,x2,x3,x4;
	cout<<"ingrese a:"<<endl;
	cin>>a;
	cout<<"ingrese b:"<<endl;
	cin>>b;
	cout<<"ingrese c:"<<endl;
	cin>>c;
	D=(b*b)-(4*(a)*(c));
	if (D>0)
	{
	x1=-b+sqrt(D)/2*(a);
	x2=-b-sqrt(D)/2*(a);
	cout<<"Hay dos soluciones reales"<<endl<<x1<<x2;
	}
	else 
		if(D==0)
		{
		x=-b/(2*(a));
		cout<<"hay una solucion"<<endl<<x;
		}
		else
		{
		x3=-b/2*(a);
		cout<<"es real:";
		x4=sqrt(-D)/2*(a);
		cout << "Soluciones Imaginarias"<<endl;
		cout << "X1: "<<x3<<" + "<< x4 <<"i"<<endl;
		cout << "X2: "<<x3<<" - "<< x4 <<"i"<<endl;
		getch();
		return 0;
		}
}
