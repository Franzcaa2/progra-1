// practico 6.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()
{
	int N, i, suma;
	suma=0;
	do{
		cout<<"Ingresa el valor de N: ";
		cin>>N;
	}while (N<0);
	for (i=1;i<=N;i++)
		suma=suma+i;
	cout<<"El resultado es: "<<suma<<endl;

	getch ();
}
