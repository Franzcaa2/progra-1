//////Validacion de enetro//////////

int validarnumeroentero (){
	 int numero;
    while (!(cin >> numero) )
    {
        cout << "\nIngrese numero de nuevo:  ";
        cin.clear();
        fflush(stdin);
    }
   
	return(numero);
}



