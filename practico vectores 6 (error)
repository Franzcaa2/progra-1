void cargar(double y[], int z)
{
	for(int i=0;i<z;i++)
	{
		cout<<"ingrese el numero y["<<i<<"]:";
		cin>>y[i];
	}
}
double mayor(double y[], int z)
{
	float p=0,prom=z,j=0;
	int r=3;
	for(int i=0;i<z-2;i++)
	{
		while(r<=z-2)
		{
		for(int j=i;j<r;j++)
		{	p=p+y[j];
			prom=p/3;
			cout<<"prom"<<endl;
			
			cout<<r<<endl;	
		}
		r=r+1;
		}
	}
	return prom;
}
